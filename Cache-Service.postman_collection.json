{
  "info": {
    "name": "Cache Service API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": "http://localhost:3002/health"
      }
    },
    {
      "name": "Set Cache",
      "request": {
        "method": "POST",
        "url": "http://localhost:3002/cache/test-key",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"value\": \"test-value\",\n    \"ttl\": 3600\n}"
        }
      }
    },
    {
      "name": "Get Cache",
      "request": {
        "method": "GET",
        "url": "http://localhost:3002/cache/test-key"
      }
    },
    {
      "name": "Set Distributed Cache",
      "request": {
        "method": "POST",
        "url": "http://localhost:3002/cache/test-key/distributed",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"value\": \"test-value\",\n    \"ttl\": 3600,\n    \"quorum\": 2\n}"
        }
      }
    },
    {
      "name": "Compare and Set Cache",
      "request": {
        "method": "POST",
        "url": "http://localhost:3002/cache/test-key/compare-and-set",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"value\": \"new-value\",\n    \"expectedVersion\": 1\n}"
        }
      }
    },
    {
      "name": "Register Cache Pattern",
      "request": {
        "method": "POST",
        "url": "http://localhost:3002/cache-patterns",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"pattern\": \"test:*\",\n    \"ttl\": 3600\n}"
        }
      }
    },
    {
      "name": "Invalidate Pattern",
      "request": {
        "method": "DELETE",
        "url": "http://localhost:3002/cache-patterns/test:*"
      }
    },
    {
      "name": "Invalidate Key",
      "request": {
        "method": "DELETE",
        "url": "http://localhost:3002/cache-patterns/key/test-key"
      }
    }
  ]
} 